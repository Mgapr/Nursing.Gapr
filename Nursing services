<script>
    // قاعدة بيانات طبية متطورة (Data Dictionary)
    const medicalDB = {
        "ضغط": "المعدل الطبيعي 120/80. ارتفاعه (أكثر من 140/90) يحتاج لتقليل الملح ومراجعة الطبيب. انخفاضه يحتاج لسوائل وأملاح.",
        "سكر": "السكر الصائم الطبيعي 70-100. التراكمي يجب أن يكون أقل من 7. في حالة غيبوبة السكر، إذا كان المريض واعياً يعطى عسلاً أو عصيراً.",
        "جلطة": "أعراض جلطة الدماغ تشمل: ثقل في اللسان، ميلان في الوجه، ضعف في طرف واحد. يجب التوجه للمستشفى خلال أول 4 ساعات.",
        "جرح": "يجب غسل الجرح بماء جاري، تعقيمه ببتادين، وتغطيته بشاش معقم. إذا كان الجرح عميقاً قد يحتاج خياطة وتطعيم تيتانوس.",
        "حرارة": "درجة الحرارة فوق 38.5 تستدعي كمادات مياه فاترة على جانبي الرقبة وتحت الإبط، مع تناول باراسيتامول كل 6 ساعات.",
        "حقنة": "يجب التأكد من تاريخ الصلاحية، واستخدام سرنجة جديدة لكل مرة، والتعقيم بالكحول قبل وبعد الحقن.",
        "قلب": "آلام الصدر التي تسمع في الكتف الأيسر قد تكون إنذاراً لمشكلة في القلب. يجب الراحة التامة وعدم المجهود والاتصال بالإسعاف.",
        "خدمة": "محمد جبر يوفر رعاية شاملة: تركيب محاليل، حقن، غيار على جروح العمليات، ورعاية مسنين بالمنزل.",
        "سعر": "الأسعار تختلف حسب الخدمة المطلوبة والمسافة. يمكنك الضغط على زر الاتصال الأخضر لمعرفة التكلفة الدقيقة."
    };

    function handleAsk() {
        const input = document.getElementById('ai-input');
        const query = input.value.trim().toLowerCase();
        if(!query) return;

        addMsg(input.value, 'user-msg');
        input.value = '';

        setTimeout(() => {
            let response = "عذراً، هذا السؤال يحتاج لتشخيص مباشر من محمد جبر. يرجى الاتصال بنا فوراً عبر الأزرار الجانبية لشرح الحالة بدقة.";
            
            // البحث الذكي داخل الداتا
            for (let key in medicalDB) {
                if (query.includes(key)) {
                    response = medicalDB[key];
                    break;
                }
            }
            addMsg(response, 'bot-msg');
        }, 500);
    }

    function addMsg(text, className) {
        const win = document.getElementById('chat-window');
        const div = document.createElement('div');
        div.className = `message ${className}`;
        div.innerText = text;
        win.appendChild(div);
        win.scrollTop = win.scrollHeight;
    }

    // دعم زر Enter
    document.getElementById('ai-input').addEventListener('keypress', (e) => {
        if(e.key === 'Enter') handleAsk();
    });
</script>

